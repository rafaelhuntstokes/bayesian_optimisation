/rat/physics_list/OmitMuonicProcesses true
/rat/db/set DETECTOR geo_file "geo/snoplusnative.geo"
/rat/db/set GEO[inner_av] material "labppo_2p2_scintillator"

/rat/db/set OPTICS[labppo_2p2_scintillator] SCINTWAVEFORM_value1 [-6.0, -30.408163265306122, -100.0, -300.0]
/rat/db/set OPTICS[labppo_2p2_scintillator] SCINTWAVEFORM_value2 [0.0, 1.0, 0.0, 0.0]
/rat/db/set OPTICS[labppo_2p2_scintillator] SCINT_RISE_TIME 0.8

/rat/db/set MC thin_factor 3.0

/run/initialize
##########EVENT LOOP############
/rat/proc frontend
/rat/proc trigger
/rat/proc eventbuilder
/rat/proc calibratePMT

/rat/proc scintFitter
/rat/proc count
/rat/procset update 10
/rat/proc outroot 

##########EVENT LOOP############

/generator/add combo decay0:fill:poisson
/generator/vtx/set backg Bi214
/generator/pos/set 0 0 0

/rat/run/start
exit